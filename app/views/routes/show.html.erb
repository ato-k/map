<div class="text-center">
  <h2><%= @route.name %></h2>
  <div class="border rounded-pill p-3" style="display:inline-block;">出発地点：<%= @route.start %></div>
</div>

<div class="container w-25">
  <div class="row" style="align-items: flex-start;">
    <%= @route.content0 %>
    <% unless @route.images[0].nil? %>
    <%= image_tag @route.images[0] %>
    <% end %>
  </div>
</div>

