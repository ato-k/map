<div class="container">
  <h2>ユーザ編集</h2>
  
  <div class="text-center">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
      </div>
    
      <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email %>
      </div>
  
      <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
      </div>
  
      <div class="form-group">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation %>
      </div>
      
      <div class="form-group">
      <%= f.submit "保存", class: "btn-secondary" %>
      </div>
      <%= link_to "保存せずに戻る", :back %>
    <% end %>
  </div>
</div>