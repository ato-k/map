<h1 class="text-center">ユーザ新規登録画面</h1>

<div class="text-center">
<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password, "パスワード" %>
  <p>※8文字以上を入力してください。</p>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "パスワード(確認用)" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "作成", class: "btn btn-secondary" %>
<% end %>
</div>