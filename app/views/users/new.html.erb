<div class="text-center">
<h2>ユーザ新規登録</h2>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', model: @user %>
  <div class="form-group">
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  </div>

  <div class="form-group">
  <%= f.label :email, "Email" %>
  <%= f.email_field :email %>
  </div>

  <div class="form-group">
  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password %>
  <p>※8文字以上を入力してください。</p>
  </div>

  <div class="form-group">
  <%= f.label :password_confirmation, "パスワード(確認用)" %>
  <%= f.password_field :password_confirmation %>
  </div>

  <div class="form-group">
  <%= f.submit "作成", class: "btn btn-secondary" %>
  </div>
<% end %>
</div>